let id(x) = x

let euler(reset=id,phase=0.,f') =
  let x = ref phase in
  let ans = !x in
  x := !x + dt * f';
  x := reset(!x);
  ans

let sine(freq,phase=0.) = sin(2 * pi * euler(freq,phase=))

let s() =
